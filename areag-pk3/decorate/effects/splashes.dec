actor UnderwaterSound : CustomInventory
{
	+INVENTORY.AUTOACTIVATE
	States
	{
	Use:
		TNT1 A 0
		TNT1 A 0 A_PlaySound("misc/waterloop", CHAN_AUTO, 0.5, true)
		stop
	}
}

actor UnderwaterSoundStop : CustomInventory
{
	+INVENTORY.AUTOACTIVATE
	States
	{
	Use:
		TNT1 A 0
		TNT1 A 0 A_StopSound(CHAN_AUTO)
		stop
	}
}

