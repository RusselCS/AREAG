actor InSplash
{
	+NOGRAVITY
	+NOINTERACTION
	+NOCLIP
	Scale 2.5
	States
	{
	Spawn:
		DOLP B 0
		DOLP B 0 A_PlaySoundEx("misc/HeavySplash","Voice")
		DOLP BCDE 6
		stop
	}
}

